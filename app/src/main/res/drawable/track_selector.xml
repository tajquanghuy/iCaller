<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
            <solid android:color="@color/color_purple_light" />
            <stroke android:color="@color/white" android:width="@dimen/_1sdp"/>
            <corners android:radius="@dimen/_20sdp" />
            <size android:width="@dimen/_2sdp" android:height="@dimen/_10sdp" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
            <solid android:color="@color/color_track_inactive" />
            <corners android:radius="@dimen/_20sdp" />
            <stroke android:color="@color/white" android:width="@dimen/_1sdp"/>
            <size android:width="@dimen/_2sdp" android:height="@dimen/_20sdp" />

        </shape>
    </item>
</selector>
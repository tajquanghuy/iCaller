<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/color_background</item>
    </style>
    <style name="EdtBlockStyle" parent="@style/Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/color_black_light</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Config font-->
    <style name="font_family_bold">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="font_family_condensed">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="font_family_medium">
        <!--        <item name="android:fontFamily">@font/sfui_text_medium</item>-->
    </style>

    <style name="font_family_normal">
        <!--        <item name="android:fontFamily">@font/sfui_text_regular</item>-->
    </style>

    <!--Config size material-->
    <style name="H1" parent="font_family_medium">
        <item name="android:textSize">@dimen/_27ssp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="H2" parent="font_family_medium">
        <item name="android:textSize">@dimen/_21ssp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="H6" parent="font_family_medium">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Sub_Title_1" parent="font_family_medium">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Sub_Title_2" parent="font_family_medium">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Sub_Title_3" parent="font_family_medium">
        <item name="android:textSize">@dimen/_19ssp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Sub_Title_4" parent="font_family_medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:background">@drawable/settings_item_background</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Sub_Title_5" parent="font_family_medium">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/badge</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Body_1" parent="font_family_normal">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Body_2" parent="font_family_normal">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Caption" parent="font_family_normal">
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--    Style Edittext-->
    <style name="Custom_Edittext" parent="font_family_normal">
        <item name="colorControlActivated">@color/color_background</item>
        <item name="android:textColor">@color/color_background</item>
        <item name="android:textCursorDrawable">@drawable/cursor_white</item>
    </style>

    <style name="Edittext_Line" parent="Custom_Edittext">
        <item name="colorControlActivated">@color/color_background</item>
        <item name="android:textColor">@color/white</item>
        <!--        <item name="android:textColorHint">@color/color_text_hint</item>-->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textCursorDrawable">@drawable/cursor_white</item>
    </style>

    <style name="Edittext_Box" parent="Custom_Edittext">
        <item name="colorControlActivated">@color/color_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <!--        <item name="android:textColorHint">@color/color_text_hint</item>-->
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textCursorDrawable">@drawable/cursor_white</item>
    </style>

    <style name="Button" parent="font_family_medium">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button_Full" parent="Button">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <!--        <item name="android:background">@drawable/bg_full_25sdp</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button_Line" parent="Button">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <!--        <item name="android:background">@drawable/bg_line_25sdp</item>-->
        <item name="android:textColor">@color/color_background</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="StyleEdittext" Parent="TextAppparent.AppCompat">
        <item name="colorControlActivated">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">20</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textCursorDrawable">@drawable/cursor_white</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTab.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <declare-styleable name="DividerView">
        <attr name="color" format="color" />
        <attr name="dashLength" format="dimension" />
        <attr name="dashGap" format="dimension" />
        <attr name="dashThickness" format="dimension" />
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item_area name="android:windowCloseOnTouchOutside">false</item_area>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="queryBackground">@null</item>
        <item name="submitBackground">@null</item>
        <item name="searchHintIcon">@null</item>
        <item name="defaultQueryHint">@android:string/search_go</item>
        <item name="colorControlActivated">@color/color_background</item>
        <!--        <item name="android:textCursorDrawable">@drawable/cursor_blue</item>-->
    </style>


    <style name="AnimationDialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="SwitchCompatTheme">
        <item name="colorControlActivated">@color/color_purple_dark</item>
    </style>

    <style name="CustomSpotDialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="DialogTitleText">@string/waiting</item>
        <item name="DialogSpotColor">@color/color_purple_dark</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="MyTooltip" parent="ToolTipLayoutDefaultStyle">
        <item name="ttlm_backgroundColor">@android:color/white</item>
        <item name="ttlm_cornerRadius">@dimen/_3sdp</item>
        <item name="ttlm_arrowRatio">1</item>
        <item name="ttlm_padding">@dimen/_15sdp</item>
        <item name="ttlm_strokeColor">@android:color/white</item>
        <item name="android:color">@android:color/white</item>
        <item name="ttlm_overlayStyle">@style/ToolTipOverlayDefaultStyle</item>
    </style>

    <style name="ToolTipOverlayDefaultStyle">
        <item name="android:color">@android:color/white</item>
        <item name="ttlm_repeatCount">99</item>
        <item name="ttlm_duration">600</item>
        <item name="android:alpha">0.5</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
    </style>


    <style name="Settings_Item" parent="Sub_Title_4">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/color_purple_light</item>
    </style>

    <style name="TextView_FAQ_Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/settings_item_background</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
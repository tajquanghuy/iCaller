<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.after_call.AfterCallActivity">

    <data>

        <variable
            name="viewModel"
            type="com.example.icaller_mobile.features.after_call.AfterCallViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_parrent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#00000000"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/color_grey"
        app:cardCornerRadius="@dimen/_3sdp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_3sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_3sdp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/line_after_call_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_end_call_not_spam"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/img_user"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_user_default" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/text_time"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_toEndOf="@+id/img_user"
                                android:textColor="@android:color/darker_gray"
                                android:visibility="visible" />


                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/line_phone_number_above"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_below="@+id/text_time"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_toEndOf="@+id/img_user"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/text_display_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:inputType="phone"
                                    android:lines="1"
                                    android:singleLine="true"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/_16sdp"
                                    android:textStyle="bold" />

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardview_edit"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:foreground="?attr/selectableItemBackgroundBorderless"
                                    app:cardBackgroundColor="@android:color/white"
                                    app:cardCornerRadius="@dimen/_5sdp">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/img_edit_after_call_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_edit_purple" />
                                </androidx.cardview.widget.CardView>
                            </androidx.appcompat.widget.LinearLayoutCompat>


                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardview_type_spam_after_call_1"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_below="@id/line_phone_number_above"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_toEndOf="@+id/img_user"
                                android:visibility="visible"
                                app:cardBackgroundColor="@android:color/white"
                                app:cardCornerRadius="@dimen/_5sdp">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/text_type_spam_after_call_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:paddingStart="@dimen/_5sdp"
                                    android:paddingEnd="@dimen/_5sdp"
                                    android:text="@string/advertising"
                                    android:textAllCaps="true"
                                    android:textColor="@color/color_red_dark"
                                    android:textSize="@dimen/_5sdp" />
                            </androidx.cardview.widget.CardView>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_below="@+id/cardview_type_spam_after_call_1"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:background="@android:color/white" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardview_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                app:cardBackgroundColor="@android:color/white"
                                app:cardCornerRadius="@dimen/_5sdp"
                                tools:ignore="RelativeOverlap">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/text_view_after_call_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:text="@string/view"
                                    android:textColor="@color/color_purple_dark" />
                            </androidx.cardview.widget.CardView>


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/text_block_phone_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_30sdp"
                                android:ellipsize="end"
                                android:lines="1"
                                android:maxLines="1"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_14sdp" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/text_national"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text_block_phone_number"
                                android:layout_marginEnd="@dimen/_30sdp"
                                android:ellipsize="end"
                                android:lines="1"
                                android:maxLines="1"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="@dimen/_10sdp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/text_mobile_network"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text_national"
                                android:layout_marginEnd="@dimen/_30sdp"
                                android:ellipsize="end"
                                android:lines="1"
                                android:maxLines="1"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="@dimen/_10sdp" />

                            <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/img_app_icon_after_call_2"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_while_icaller" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/text_app_name_after_call_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:ellipsize="end"
                                    android:gravity="end"
                                    android:lines="1"
                                    android:maxLines="1"
                                    android:text="@string/app_name"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/_10sdp" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <include
                                layout="@layout/layout_logo_app"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text_national"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="bottom|end" />

                        </RelativeLayout>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/line_button_action"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="#687B2F9E">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/line_call"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_call_overlay" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:gravity="center"
                                    android:text="@string/call"
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/white"
                                    android:textStyle="bold" />


                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/line_message"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_message_overlay" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:gravity="center"
                                    android:text="@string/message"
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/white"
                                    android:textStyle="bold" />


                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/line_save"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_save_overlay" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:gravity="center"
                                    android:text="@string/key_SAVE"
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/white"
                                    android:textStyle="bold" />


                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/line_block"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/img_block"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_block_white" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/text_block"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:gravity="center"
                                    android:text="@string/key_unblock"
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/white"
                                    android:textStyle="bold" />
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/line_after_call_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <RelativeLayout
                            android:id="@+id/rela_after_call_2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_90sdp"
                            android:background="@drawable/bg_end_call_not_spam"
                            android:padding="@dimen/_10sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/text_block_name_after_call_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_30sdp"
                                android:ellipsize="end"
                                android:lines="1"
                                android:maxLines="1"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_18sdp"
                                android:textStyle="bold"
                                tools:ignore="RelativeOverlap" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/line_phone_after_call_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text_block_name_after_call_2"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/text_block_phone_number_after_call_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:lines="1"
                                    android:maxLines="1"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/_13sdp" />

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardview_type_spam_after_call_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_10sdp"
                                    android:layout_below="@+id/text_block_name_after_call_2"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_toEndOf="@+id/text_block_phone_number_after_call_2"
                                    android:visibility="gone"
                                    app:cardBackgroundColor="@android:color/white"
                                    app:cardCornerRadius="5dp">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/text_type_spam_after_call_2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:lines="1"
                                        android:paddingStart="@dimen/_5sdp"
                                        android:paddingEnd="@dimen/_5sdp"
                                        android:text="@string/advertising"
                                        android:textAllCaps="true"
                                        android:textColor="@color/color_red_dark"
                                        android:textSize="@dimen/_5sdp" />
                                </androidx.cardview.widget.CardView>
                            </androidx.appcompat.widget.LinearLayoutCompat>


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/text_national_after_call_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/line_phone_after_call_2"
                                android:layout_marginEnd="@dimen/_30sdp"
                                android:ellipsize="end"
                                android:lines="1"
                                android:maxLines="1"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="@dimen/_10sdp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/text_mobile_network_after_call_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text_national_after_call_2"
                                android:layout_marginEnd="@dimen/_30sdp"
                                android:ellipsize="end"
                                android:lines="1"
                                android:maxLines="1"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="@dimen/_10sdp" />

                            <include
                                layout="@layout/layout_logo_app"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="bottom|end" />

                        </RelativeLayout>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/line_content_after_call_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:visibility="gone">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/text_info_call_after_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:lines="1"
                                android:maxLines="1"
                                android:text="@string/call_received"
                                android:textColor="@android:color/darker_gray" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:lines="1"
                                android:maxLines="1"
                                android:text="@string/is_this_name_correct"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_13sdp" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_incorrect"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_marginStart="@dimen/_40sdp"
                                    android:layout_marginEnd="@dimen/_15sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_button_line_purple"
                                    android:maxLines="1"
                                    android:text="@string/incorrect"
                                    android:textAllCaps="false"
                                    android:textColor="@color/color_purple_dark" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_correct"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:layout_marginEnd="@dimen/_40sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_rectangle_full_15sdp"
                                    android:text="@string/correct"
                                    android:textAllCaps="false"
                                    android:textColor="@android:color/white" />

                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/line_content_after_call_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:visibility="gone">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/text_info_call_after_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:lines="1"
                                android:maxLines="1"
                                android:text="@string/call_received"
                                android:textColor="@android:color/darker_gray" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:lines="1"
                                android:maxLines="1"
                                android:text="@string/do_you_think_this_is_spam"
                                android:textColor="@android:color/black" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_not_spam"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_marginStart="@dimen/_30sdp"
                                    android:layout_marginEnd="@dimen/_15sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_button_line_purple"
                                    android:text="@string/not_spam"
                                    android:textAllCaps="false"
                                    android:textColor="@color/color_purple_dark" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_spam"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:layout_marginEnd="@dimen/_30sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_rectangle_full_15sdp"
                                    android:text="@string/spam"
                                    android:textAllCaps="false"
                                    android:textColor="@android:color/white" />

                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/line_content_after_call_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:visibility="visible">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/text_count_time_answer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:lines="1"
                                android:maxLines="1"
                                android:text="@string/you_answered_this_number"
                                android:textColor="@android:color/darker_gray" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_7sdp"
                                    android:layout_height="@dimen/_7sdp"
                                    android:src="@drawable/ic_arrow_right_down_purple" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/text_time_call"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:maxLines="1"
                                    android:textColor="#737373"
                                    android:textSize="@dimen/_13sdp" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_who_this_is"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:background="@drawable/bg_rectangle_full_15sdp"
                                android:maxLines="1"
                                android:paddingStart="@dimen/_5sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:text="@string/tell_us_who_this_is"
                                android:textAllCaps="false"
                                android:textColor="@android:color/white" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/line_content_after_call_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:visibility="gone">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="start"
                                android:lines="1"
                                android:maxLines="1"
                                android:text="@string/tell_us_who_this_is"
                                android:textColor="@android:color/black" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edt_who_is_this"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:backgroundTint="@color/color_purple_dark"
                                android:hint="@string/who_is_this"
                                android:inputType="text"
                                android:maxLines="1"
                                android:textColor="@color/color_purple_dark"
                                android:textCursorDrawable="@drawable/cursor_purple" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_report"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginStart="@dimen/_70sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_70sdp"
                                android:background="@drawable/bg_rectangle_full_15sdp"
                                android:text="@string/key_report"
                                android:textAllCaps="false"
                                android:textColor="@android:color/white" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/line_report_spam"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/badge"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_alignTop="@+id/imgTabIcon"
                                    android:layout_alignEnd="@+id/imgTabIcon"
                                    android:background="@drawable/badge"
                                    android:gravity="center"
                                    android:text="!"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:visibility="visible" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:ellipsize="end"
                                    android:gravity="start"
                                    android:lines="1"
                                    android:maxLines="1"
                                    android:text="@string/report_as_spam"
                                    android:textColor="@android:color/black" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:src="@drawable/ic_chevron_right_black_24dp" />

                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_close_dialog"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_close_white_24dp" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewAdvertising"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_3sdp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="@dimen/_3sdp">

                <RelativeLayout
                    android:id="@+id/adMobView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center" />
            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.cardview.widget.CardView>
</layout>